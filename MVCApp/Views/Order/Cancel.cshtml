@{
    ViewData["Title"] = "Order Cancelled";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="text-center mb-5">
            <div class="cancel-animation mb-4">
                <i class="fas fa-times-circle text-warning" style="font-size: 4rem;"></i>
            </div>
            <h1 class="h2 mb-3">Order Cancelled</h1>
            <p class="lead text-muted">Your order has been cancelled successfully.</p>
            <div class="alert alert-warning d-inline-block">
                <i class="fas fa-info-circle me-2"></i>
                No charges have been made to your account.
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>What Happened?
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-undo text-warning fa-lg"></i>
                        </div>
                        <h6>Order Cancelled</h6>
                        <p class="small text-muted">You cancelled the order before payment was processed.</p>
                    </div>
                    <div class="col-md-6 text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-shield-alt text-success fa-lg"></i>
                        </div>
                        <h6>No Charges</h6>
                        <p class="small text-muted">No money has been charged to your payment method.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-bottom">
                <h5 class="mb-0">
                    <i class="fas fa-question-circle me-2"></i>Need Help?
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-shopping-cart text-primary fa-lg"></i>
                        </div>
                        <h6>Continue Shopping</h6>
                        <p class="small text-muted">Browse our products and find something you love.</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-headset text-primary fa-lg"></i>
                        </div>
                        <h6>Contact Support</h6>
                        <p class="small text-muted">Get help with your order or account.</p>
                    </div>
                    <div class="col-md-4 text-center mb-3">
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-list text-primary fa-lg"></i>
                        </div>
                        <h6>View Orders</h6>
                        <p class="small text-muted">Check your order history and status.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center">
            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-shopping-bag me-2"></i>Continue Shopping
                </a>
                <a asp-controller="Order" asp-action="MyOrders" class="btn btn-outline-secondary">
                    <i class="fas fa-list me-2"></i>View My Orders
                </a>
                <a href="mailto:support@example.com" class="btn btn-outline-info">
                    <i class="fas fa-envelope me-2"></i>Contact Support
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.cancel-animation {
    animation: shake 0.6s ease-out;
}

@@keyframes shake {
    0%, 100% {
        transform: translateX(0);
    }
    10%, 30%, 50%, 70%, 90% {
        transform: translateX(-5px);
    }
    20%, 40%, 60%, 80% {
        transform: translateX(5px);
    }
}
</style> 