@model MVCApp.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<main role="main" class="pb-2">
    <div class="container py-3">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow rounded-4 p-4 bg-white mb-4">
                    <div class="card-header bg-gradient-primary text-white rounded-4 mb-4 d-flex align-items-center">
                        <i class="fas fa-truck me-2"></i>
                        <h5 class="mb-0">Shipping Information</h5>
                    </div>
                    <div class="card-body p-0">
                        <form id="checkout-form" asp-controller="Order" asp-action="CreateCheckoutSession" method="post">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="FirstName" class="form-control" placeholder="First Name" required>
                                        <label asp-for="FirstName">First Name</label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="LastName" class="form-control" placeholder="Last Name" required>
                                        <label asp-for="LastName">Last Name</label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control" placeholder="Email" type="email" required>
                                        <label asp-for="Email">Email</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Phone" class="form-control" placeholder="Phone" required>
                                        <label asp-for="Phone">Phone</label>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Address" class="form-control" placeholder="Address" required>
                                        <label asp-for="Address">Address</label>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="City" class="form-control" placeholder="City" required>
                                        <label asp-for="City">City</label>
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating">
                                        <input asp-for="State" class="form-control" placeholder="State" required>
                                        <label asp-for="State">State</label>
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-floating">
                                        <input asp-for="ZipCode" class="form-control" placeholder="Zip Code" required>
                                        <label asp-for="ZipCode">Zip Code</label>
                                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Country" class="form-control" placeholder="Country" value="United States" required>
                                        <label asp-for="Country">Country</label>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <textarea asp-for="Notes" class="form-control" placeholder="Order Notes (Optional)" style="height: 100px"></textarea>
                                        <label asp-for="Notes">Order Notes (Optional)</label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card border-0 shadow rounded-4 p-4 bg-white mb-4">
                    <div class="card-header bg-gradient-primary text-white rounded-4 mb-4 d-flex align-items-center">
                        <i class="fab fa-cc-stripe me-2"></i>
                        <h5 class="mb-0">Payment</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="alert alert-info small mb-3">
                            <i class="fas fa-shield-alt me-1"></i>
                            Your payment will be processed securely by Stripe.
                        </div>
                        <div class="d-grid">
                            <a href="@Url.Action("Payment", "Cart")" class="btn btn-primary btn-lg">
                                <i class="fas fa-lock me-2"></i>Proceed to Payment
                            </a>
                        </div>
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-credit-card me-1"></i>
                                We accept all major credit cards
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-0 shadow rounded-4 p-4 bg-white mb-4">
                    <div class="card-header bg-gradient-primary text-white rounded-4 mb-4 d-flex align-items-center">
                        <i class="fas fa-shopping-cart me-2"></i>
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.Cart.Items.Any())
                        {
                            <div class="mb-3">
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.imageUrl))
                                            {
                                                <img src="@item.imageUrl" class="me-2 border shadow-sm" style="width: 40px; height: 40px; object-fit: cover; border-radius: 4px;" alt="@item.ProductName">
                                            }
                                            else
                                            {
                                                <div class="me-2 bg-light d-flex align-items-center justify-content-center border shadow-sm" style="width: 40px; height: 40px; border-radius: 4px;">
                                                    <i class="fas fa-image text-muted"></i>
                                                </div>
                                            }
                                            <div>
                                                <strong class="small">@item.ProductName</strong>
                                                <br>
                                                <span class="badge bg-secondary">Qty: @item.Quantity</span>
                                            </div>
                                        </div>
                                        <span class="fw-bold">$@item.TotalPrice.ToString("F2")</span>
                                    </div>
                                }
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Subtotal:</span>
                                <span>$@Model.Cart.Subtotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tax (8%):</span>
                                <span>$@Model.Cart.TaxAmount.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Shipping:</span>
                                <span class="@(Model.Cart.ShippingAmount == 0 ? "text-success" : "")">
                                    @(Model.Cart.ShippingAmount == 0 ? "FREE" : $"${Model.Cart.ShippingAmount:F2}")
                                </span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between mb-3">
                                <strong>Total:</strong>
                                <strong class="text-primary fs-5">$@Model.Cart.TotalAmount.ToString("F2")</strong>
                            </div>
                            @if (Model.Cart.ShippingAmount > 0)
                            {
                                <div class="alert alert-info small mb-3">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Add $@((50 - Model.Cart.Subtotal).ToString("F2")) more to your cart for FREE shipping!
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success small mb-3">
                                    <i class="fas fa-check-circle me-1"></i>
                                    You qualify for FREE shipping!
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="fas fa-shopping-cart fa-2x text-muted mb-2"></i>
                                <p class="text-muted mb-0">Your cart is empty</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="d-grid">
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        $(document).ready(function() {
            $('#checkout-form').on('submit', function(e) {
                e.preventDefault();
                var form = $(this);
                var button = $('#checkout-button');
                var originalText = button.html();
                // Validate form
                if (!form[0].checkValidity()) {
                    form[0].reportValidity();
                    return;
                }
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Processing...');
                $.ajax({
                    url: form.attr('action'),
                    method: 'POST',
                    data: form.serialize(),
                    success: function(response) {
                        if (response.sessionId) {
                            // Redirect to Stripe Checkout
                            var stripe = Stripe('pk_test_your_publishable_key_here');
                            stripe.redirectToCheckout({
                                sessionId: response.sessionId
                            });
                        } else {
                            showToast('Error creating checkout session. Please try again.', 'danger');
                            button.prop('disabled', false).html(originalText);
                        }
                    },
                    error: function() {
                        showToast('Error processing checkout. Please try again.', 'danger');
                        button.prop('disabled', false).html(originalText);
                    }
                });
            });
        });
    </script>
} 