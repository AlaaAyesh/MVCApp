<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - A Mart</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body>
    <!-- Loading Spinner -->
    <div id="loading-spinner" class="loading-spinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <i class="fas fa-shopping-bag me-1"></i>
                <span class="brand-text">A Mart</span>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">
                            <i class="fas fa-store me-1"></i>Shop
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-th-large me-1"></i>Categories
                        </a>
                        <ul class="dropdown-menu">
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var category in ViewBag.Categories)
                                {
                                    var iconClass = category.Name.ToLower() switch
                                    {
                                        var name when name.Contains("electronics") => "fas fa-laptop",
                                        var name when name.Contains("clothing") => "fas fa-tshirt",
                                        var name when name.Contains("home") || name.Contains("garden") => "fas fa-home",
                                        var name when name.Contains("sports") => "fas fa-dumbbell",
                                        var name when name.Contains("books") => "fas fa-book",
                                        // Add more mappings as needed
                                        _ => "fas fa-tag"
                                    };
                                    <li>
                                        <a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id">
                                            <i class="@iconClass me-2"></i>@category.Name
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li><span class="dropdown-item text-muted">No categories</span></li>
                            }
                        </ul>
                    </li>
                </ul>

                <!-- Search Bar -->
                <form class="d-flex me-2" role="search" asp-controller="Products" asp-action="Index" method="get">
                    <div class="input-group">
                        <input class="form-control border-end-0" type="search" name="searchTerm" placeholder="Search products..." aria-label="Search">
                        <button class="btn btn-outline-secondary border-start-0" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>

                <!-- Right Navigation -->
                <ul class="navbar-nav align-items-center">
                    <!-- Theme Toggle -->
                    <li class="nav-item me-1">
                        <button class="btn btn-outline-secondary btn-sm" id="theme-toggle" title="Toggle theme">
                            <i class="fas fa-moon" id="theme-icon"></i>
                        </button>
                    </li>

                    <!-- Cart -->
                    <li class="nav-item me-1">
                        <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                            <i class="fas fa-shopping-cart fs-6"></i>
                            @if ((ViewBag.CartItemCount ?? 0) > 0)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge" id="cartCountBadge">
                                    @ViewBag.CartItemCount
                                </span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge" id="cartCountBadge" style="display:none;">
                                    0
                                </span>
                            }
                        </a>
                    </li>

                    <!-- User Menu -->
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="pb-2">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer mt-auto bg-dark text-light w-100 border-0 pt-5 pb-4">
        <div class="container">
            <div class="row gy-4 align-items-start">
                <div class="col-lg-4 mb-3">
                    <h5 class="text-white mb-3 d-flex align-items-center">
                        <i class="fas fa-shopping-bag me-2"></i>A Mart
                    </h5>
                    <p class="text-muted small mb-3">Your one-stop destination for quality products. Shop with confidence and style at A Mart.</p>
                    <div class="d-flex gap-2">
                        <a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle bg-secondary-subtle text-muted social-icon" style="width:36px;height:36px;"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle bg-secondary-subtle text-muted social-icon" style="width:36px;height:36px;"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle bg-secondary-subtle text-muted social-icon" style="width:36px;height:36px;"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="d-inline-flex align-items-center justify-content-center rounded-circle bg-secondary-subtle text-muted social-icon" style="width:36px;height:36px;"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-3">
                    <h6 class="text-white mb-3">Shop</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none small">New Arrivals</a></li>
                        <li><a href="#" class="text-muted text-decoration-none small">Best Sellers</a></li>
                        <li><a href="#" class="text-muted text-decoration-none small">Sale</a></li>
                        <li><a href="#" class="text-muted text-decoration-none small">Clearance</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-6 mb-3">
                    <h6 class="text-white mb-3">Customer service</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted text-decoration-none small">Contact Us</a></li>
                        <li><a href="#" class="text-muted text-decoration-none small">Help Center</a></li>
                        <li><a href="#" class="text-muted text-decoration-none small">Returns</a></li>
                        <li><a href="#" class="text-muted text-decoration-none small">Shipping Info</a></li>
                    </ul>
                </div>
                <div class="col-lg-4 mb-3">
                    <h6 class="text-white mb-3">Newsletter</h6>
                    <p class="text-muted small mb-2">Subscribe to get special offers and updates.</p>
                    <div class="input-group">
                        <input type="email" class="form-control" placeholder="Your email">
                        <button class="btn btn-primary" type="button">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4 border-secondary-subtle">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-muted mb-0 small">&copy; 2024 A Mart. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <span class="d-inline-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" class="me-2 text-success">
                            <rect x="4" y="10" width="16" height="8" rx="2" fill="#23272f" stroke="#6c63ff"/>
                            <path d="M8 10V7a4 4 0 1 1 8 0v3" stroke="#6c63ff" stroke-width="2" fill="none"/>
                            <circle cx="12" cy="14" r="1.5" fill="#6c63ff"/>
                        </svg>
                        <span class="fw-semibold text-light">Secure Payment</span>
                    </span>
                </div>
            </div>
        </div>
    </footer>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toast-container">
        <!-- Toasts will be dynamically added here -->
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Theme Toggle
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('theme-toggle');
            const themeIcon = document.getElementById('theme-icon');
            const html = document.documentElement;
            
            // Check for saved theme preference
            const savedTheme = localStorage.getItem('theme') || 'light';
            html.setAttribute('data-bs-theme', savedTheme);
            updateThemeIcon(savedTheme);
            
            themeToggle.addEventListener('click', function() {
                const currentTheme = html.getAttribute('data-bs-theme');
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                
                html.setAttribute('data-bs-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateThemeIcon(newTheme);
                
                showToast(`Switched to ${newTheme} mode`, 'info');
            });
            
            function updateThemeIcon(theme) {
                themeIcon.className = theme === 'light' ? 'fas fa-moon' : 'fas fa-sun';
            }
        });

        // Loading Spinner
        window.addEventListener('load', function() {
            const spinner = document.getElementById('loading-spinner');
            spinner.style.opacity = '0';
            setTimeout(() => {
                spinner.style.display = 'none';
            }, 300);
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add hover effects to cards
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.boxShadow = '0 10px 25px rgba(0,0,0,0.1)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
                this.style.boxShadow = '';
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
